#include <iostream>
using namespace std;

int main()
{
    int r;
    cin>>r;
    
    for(int i=1;i<r;i++)
    {
        for(int j=1;j<=i;j++)
        {
           cout<<"*"; 
        }
        
        for(int h=1;h<=2*(r-i);h++)
        {
            cout<<" ";
        }
        
        for(int k=1;k<=i;k++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
    for(int i=r;i>=1;i--)
    {
        for(int j=1;j<=i;j++)
        {
           cout<<"*"; 
        }
        
        for(int h=1;h<=2*(r-i);h++)
        {
            cout<<" ";
        }
        
        for(int k=1;k<=i;k++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
    
    

    return 0;
}
